{
  "name": "skill-markdown-i18n",
  "version": "1.1.2",
  "description": "Translate and sync markdown documentation between languages. AI coding assistant skill for Cursor, Claude Code, Codex, and Gemini.",
  "type": "module",
  "packageManager": "pnpm@10.26.1",
  "bin": {
    "skill-markdown-i18n": "./install.js"
  },
  "scripts": {
    "install-skill": "node install.js",
    "test": "node scripts/validate.js README.md README.md",
    "test:ci": "node scripts/ci-smoke-test.js",
    "test:create-plan": "node scripts/create-plan.js",
    "test:sync-plan": "node scripts/sync-plan.js",
    "test:git-diff-sync": "node scripts/git-diff-sync.js",
    "test:validate": "node scripts/validate.js --help"
  },
  "files": [
    "install.js",
    "CHANGELOG.md",
    "SKILL.md",
    "README.md",
    "glossary.md",
    ".i18n/*.yaml",
    "scripts/*.js",
    "scripts/package.json",
    "package.json"
  ],
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "inquirer": "^9.2.12",
    "js-yaml": "^4.1.0"
  },
  "keywords": [
    "markdown",
    "i18n",
    "translation",
    "localization",
    "cursor",
    "claude-code",
    "codex",
    "gemini",
    "ai-skill",
    "documentation"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/BeaversLab/skill-markdown-i18n.git"
  },
  "bugs": {
    "url": "https://github.com/BeaversLab/skill-markdown-i18n/issues"
  },
  "homepage": "https://github.com/BeaversLab/skill-markdown-i18n#readme",
  "author": "BeaversLab",
  "license": "MIT"
}
